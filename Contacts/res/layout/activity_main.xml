         	        android:textStyle="italic"
         	        android:padding="7dp"
         	        android:text="Call" />
         	    
         	    <Button 
         	        android:id="@+id/call_0"
         	        android:layout_width="0dp"
         	        android:layout_height="wrap_content"
         	        android:textSize="40dp"
         	        android:layout_weight="1"
         	        android:padding="7dp"
         	        android:textStyle="italic"
         	        android:textColor="#000000"
         	        android:text="0" />
         	    
         	    <Button 
         	        android:id="@+id/call_11"
         	        android:layout_width="0dp"
         	        android:layout_weight="1"
         	        android:padding="7dp"
         	        android:layout_height="wrap_content"
         	        android:textSize="40dp"
                    android:textStyle="italic"
         	        android:textColor="#000000"
         	        android:text="Del" />
         	    
