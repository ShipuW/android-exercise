<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
        android:layout_gravity="center_horizontal"
       android:id="@+id/linearLayout">

         <Button
             android:id="@+id/Button_next"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="@string/next" >
    
           </Button>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center" >

             <Button
                 android:id="@+id/Button_flip"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="@string/play1" />

             <Button
                 android:id="@+id/Button_flip1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="@string/play2" />
         </LinearLayout>
  
    <ViewFlipper android:id="@+id/details"   
       android:layout_width="fill_parent"     
       android:layout_height="wrap_content"   
       android:persistentDrawingCache="animation"   
       android:flipInterval="1000"   
       android:inAnimation="@anim/push_left_in"   
	   android:outAnimation="@anim/push_left_out">     
       <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent"> 
           <ImageView  
              android:contentDescription="@string/desc"  
              android:id="@+id/image1"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc1">    
           </ImageView>

         
    
       </LinearLayout>    
      
       <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent"> 
           <ImageView   
              android:contentDescription="@string/desc" 
              android:id="@+id/image2"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc2">    
           </ImageView>    
       </LinearLayout>    
           
       <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView    
              android:contentDescription="@string/desc"
              android:id="@+id/image3"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc3">    
           </ImageView>    
       </LinearLayout>    
       
       <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView    
              android:id="@+id/image4" 
              android:contentDescription="@string/desc"    
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc4">    
           </ImageView>    
       </LinearLayout> 
      <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView    
              android:contentDescription="@string/desc"
              android:id="@+id/image5"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc5">    
           </ImageView>    
       </LinearLayout> 
        <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView    
              android:contentDescription="@string/desc"
              android:id="@+id/image6"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc6">    
           </ImageView>    
       </LinearLayout> 
        <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView 
              android:contentDescription="@string/desc"    
              android:id="@+id/image7"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc7">    
           </ImageView>    
       </LinearLayout>
        <LinearLayout    
           android:orientation="vertical"   
           android:layout_width="fill_parent"     
           android:layout_height="fill_parent">  
           <ImageView   
              android:contentDescription="@string/desc"  
              android:id="@+id/image8"     
              android:layout_width="fill_parent"   
              android:layout_height="wrap_content" android:src="@drawable/picc8">    
           </ImageView>    
       </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout1">
    </LinearLayout>
     
    </LinearLayout>
  
</RelativeLayout>